<Animation name="lever_flap" guid="bf56b73b-6d0d-4e30-9bcc-2f360d40f191" length="100" type="Sim" typeParam2="lever_flap" typeParam="AutoPlay" />
    <PartInfo>
        <Name>lever_flap</Name>
        <AnimLength>100</AnimLength>
        <Animation>
            <Parameter>
                <Sim>
                    <Variable>FLAPS HANDLE PERCENT</Variable>
                    <Units>percent</Units>
                </Sim>
                <Lag>300</Lag>
            </Parameter>
        </Animation>
        <MouseRect>
            <Cursor>Hand</Cursor>
            <HelpID>HELPID_GAUGE_FLAPS_SWITCH</HelpID>
            <TooltipID>TOOLTIPTEXT_FLAPS_SWITCH</TooltipID>
            <MouseFlags>LeftSingle+LeftDrag+Wheel</MouseFlags>
            <CallbackJumpDragging>
                <YMovement>
                    <Delta>30</Delta>
                    <EventIdInc>FLAPS_INCR</EventIdInc>
                    <EventIdDec>FLAPS_DECR</EventIdDec>
                </YMovement>
            </CallbackJumpDragging>
        </MouseRect>
    </PartInfo>
